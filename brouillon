// avec une commande :
#include <stdio.h>
#include "unistd.h"
#include <sys/wait.h>

 int	main(int argc, char *argv[], char *envp[])
{
	char	*path;
	char	**command;
	int		file_fd;
	int		pid;
	argc++;

	command = ft_split(argv[2], ' ');
	path = find_command_path(envp, argv[2]);

	//open infile
	
	file_fd = open(argv[1], O_RDONLY);
	if (file_fd == -1)
		return(0);
	dup2(file_fd, STDIN_FILENO);
	close(file_fd);

	//open outfile
	
	file_fd = open(argv[3], O_RDWR | O_CREAT | O_TRUNC);
	if (file_fd == -1)
		return(0);
	if ((pid = fork()) < 0)
		return (0);
	if (pid == 0)
	{
		dup2(file_fd, STDOUT_FILENO);
		execve(path, command, envp);
	}
	else
	{	
	}
	close(file_fd);
	ft_printf("YOUHOU\n");
	return (0);
}